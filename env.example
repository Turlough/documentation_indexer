# Where the SQLite database will be created (relative or absolute).
RAG_DB_PATH=./data/rag.sqlite3

# Optional: a default docs directory for ingest requests that omit input.
RAG_DEFAULT_DOCS_DIR=./docs

# Chunking configuration
RAG_MAX_CHUNK_CHARS=8000
RAG_MIN_CHUNK_CHARS=1200
RAG_MAX_PAGES_PER_CHUNK=3

# Query defaults
RAG_DEFAULT_TOP_K=5
RAG_DEFAULT_SNIPPET_CHARS=800

# Flask
FLASK_HOST=127.0.0.1
FLASK_PORT=8000
